<resources>

    <style name="sobot_demo_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">@color/sobot_btn_background_color</item>
        <item name="android:textColor">@color/sobot_btn_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="sobot_demo_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/sobot_btn_background_color</item>
        <item name="android:textColor">@color/sobot_btn_text_color</item>
    </style>

    <style name="sobot_person_set_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/sobot_textview_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="sobot_person_set_edittext_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/sobot_edittext_text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">#888888</item>
        <item name="android:background">@color/sobot_btn_text_color</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="sobot_product_se_edittext_style">
        <item name="android:textColorHint">#888888</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/sobot_edittext_text_color</item>
        <item name="android:background">@color/sobot_btn_text_color</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="sobot_checkbox_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:button">@drawable/sobot_checkbox_style</item>
        <item name="android:textColor">@color/sobot_checkbox_text_color</item>
    </style>

    <!-- 图片样式 -->
    <style name="img_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="TxtTitle" parent="@style/img_Style">
        <item name="android:textSize">@dimen/sobot_text_font_smaller</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">6.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:focusable">false</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="custom_short_divide_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.1dip</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:background">@color/sobot_demo_line_1dp</item>
    </style>

    <style name="custom_full_divide_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.1dip</item>
        <item name="android:background">@color/sobot_demo_line_1dp</item>
    </style>

    <!-- editText后delete -->
    <style name="style_delete">
        <item name="android:layout_width">@dimen/sobot_edit_delete_size</item>
        <item name="android:layout_height">@dimen/sobot_edit_delete_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:padding">@dimen/sobot_edit_delete_padding</item>
        <item name="android:src">@drawable/sobot_demo_word_delete_selector</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="radiobutton_right_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@drawable/sobot_demo_radiobtn_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">#ffffff</item>
    </style>
</resources>