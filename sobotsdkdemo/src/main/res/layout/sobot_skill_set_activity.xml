<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/sobot_demo_layout_titlebar" />

    <EditText
        android:paddingLeft="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/sobot_demo_skillid"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/sobot_btn_text_color"
        android:hint="技能组编号"
        android:textColor="@color/sobot_edittext_text_color"
        android:textColorHint="#888888" />

    <EditText
        android:paddingLeft="20dp"
        android:id="@+id/sobot_demo_skillname"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/sobot_btn_text_color"
        android:hint="技能组名称"
        android:textColor="@color/sobot_edittext_text_color"
        android:textColorHint="#888888" />

</LinearLayout>