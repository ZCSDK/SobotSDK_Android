<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--布局文件 时间、暂无客服在线等等。提醒的样式 -->
    <gradient
        android:angle="90"
        android:endColor="@color/sobot_listview_remind"
        android:startColor="@color/sobot_listview_remind" />
    <!-- stroke 描边 -->
    <stroke
        android:width="1dip"
        android:color="@color/sobot_listview_remind" />
    <!-- corners 圆角 android:radius为角的弧度，值越大角越圆。 -->
    <corners android:radius="5dip" />

    <padding
        android:left="15dp"
        android:right="15dp"
        android:top="3dip" 
        android:bottom="3dp"/>

</shape>