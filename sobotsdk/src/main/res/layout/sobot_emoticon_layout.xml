<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/sobot_color_bottom_bg"
                android:orientation="vertical">


    <com.sobot.chat.widget.kpswitch.view.emoticon.EmoticonsFuncView
        android:id="@+id/view_epv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_eiv"
        android:layout_marginTop="@dimen/sobot_emoticon_view_indicator_margin_t"
        android:orientation="vertical"/>


    <com.sobot.chat.widget.kpswitch.view.emoticon.EmoticonsIndicatorView
        android:id="@+id/view_eiv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sobot_emoticon_view_indicator_height"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/sobot_emoticon_view_indicator_padding_b"/>

</RelativeLayout>