<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/sobot_layout_titlebar1" />

    <ListView
        android:id="@+id/sobot_lv_files"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:scrollbarThumbVertical="@drawable/custom_scroll_style" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ececec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/sobot_tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#6DAAE1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/sobot_tv_send"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="15dp"
            android:background="@drawable/sobot_btn_normal_selector"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/sobot_button_send"
            android:textColor="@drawable/sobot_btn_text_selector"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>