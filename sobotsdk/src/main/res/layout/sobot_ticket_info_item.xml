<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_0_4_dp"
        android:background="@color/sobot_line_1dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:paddingRight="20dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/sobot_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sobot_common_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/sobot_tv_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/sobot_tv_time"
            android:layout_alignBottom="@id/sobot_tv_time"

            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/sobot_tv_time"
            android:src="@drawable/sobot_ticket_new_flag"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:paddingBottom="2dp"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:visibility="gone"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/sobot_tv_ticket_status"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/sobot_ticket_status_bg3"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:paddingLeft="18dp"
            android:paddingTop="2dp"
            android:paddingRight="18dp"
            android:paddingBottom="2dp"
            android:textColor="@android:color/white"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/sobot_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sobot_tv_time"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/sobot_tv_ticket_status"
            android:ellipsize="end"
            android:maxLines="2"
            android:lines="2"
            android:textColor="@color/sobot_common_gray"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/sobot_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sobot_tv_time"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:visibility="gone" />


        <View
            android:id="@+id/sobot_line"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_below="@+id/sobot_tv_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#ebebeb"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sobot_tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sobot_line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#888888"
            android:textSize="11sp"
            android:visibility="gone" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_0_4_dp"
        android:background="@color/sobot_line_1dp"
        />
</LinearLayout>